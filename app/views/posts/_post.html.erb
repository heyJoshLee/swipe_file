<div class="card mb-3">
<div class="row">

  <div class="col-2">
    <div class="text-center">
      <%=fa_icon "arrow-up"%>
      0
      <%=fa_icon "arrow-down"%>
    </div>
  </div>

  <div class="card-block">
    <%= link_to post do %>
      <h2><%= post.title %></h2>
    <% end %>
  </div>
</div>
<div class="row">
    <div class="col-2">
      <%= link_to post.type.name, post.type, class: "badge badge-primary" %>  
      <%= link_to post.industry.name, post.industry, class: "badge badge-primary" %>  
    </div>
    <div>
    <small>Posted by <%=post.user.username%> on <%=post.created_at%></small>
    </div>
</div>




</div>