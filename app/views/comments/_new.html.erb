<div class="card">
  <h5>New comment</h5>
  <%= form_with(model: [@post, @comment], local: true) do |f| %>
    <%= render "shared/errors", obj: @comment %>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Comment", class: "btn btn-primary"%>
      </div>
  <% end %>
</div>
